<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabStyle">@style/MyTab</item>
        <item name="android:actionBarTabBarStyle">@style/MyTabBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyTabText</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#ff7100</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:titleTextStyle">@style/MyTitle</item>
    </style>

    <style name="MyTitle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:textColor">#fbd392</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyTab" parent="@android:style/Widget.Holo.ActionBar.TabBar">
        <item name="android:tabStripEnabled">true</item>
        <item name="android:background">#fff9eb</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="MyTabBar">
        <item name="android:background">#fff9eb</item>
    </style>
    <style name="MyTabText">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NoTitleActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/NoTitle</item>
        <item name="android:actionBarTabStyle">@style/MyTab</item>
        <item name="android:actionBarTabBarStyle">@style/MyTabBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyTabText</item>
    </style>

    <style name="NoTitle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#ff7100</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:titleTextStyle">@style/Title</item>
    </style>
    <style name="Title">
        <item name="android:textColor">#ff7100</item>
    </style>

</resources>
